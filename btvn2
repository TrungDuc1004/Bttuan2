    <script>
        function tinhdiem() {
            var diemki1 = parseFloat(document.getElementById("ki1").value);
            var diemki2 = parseFloat(document.getElementById("ki2").value);
            var tong = (diemki1 + diemki2) / 2;
            document.getElementById("sum").value = tong; //g·∫Øn gtri tong v√†o input "sum"
            
            if (tong <= 10 && tong >= 0) {
                if (tong >= 9) {
                     alert("SX");
                     document.getElementById("kq").innerHTML ="SX";
                    // document.getElementById("kq").style.background = "red";
                     document.getElementById("kq").style.color = "red";
                } else if (tong >= üòé {
                     alert("Gi·ªèi");
                     document.getElementById("kq").innerHTML ="Gi·ªèi";
                     document.getElementById("kq").style.color = "red";
                } else if (tong > 7) {
                     alert("Kh√°");
                     document.getElementById("kq").innerHTML ="Kh√°";
                     document.getElementById("kq").style.color = "red";
                } else if (tong >= 5) {
                     alert("TB");
                     document.getElementById("kq").innerHTML ="TB";
                     document.getElementById("kq").style.color = "red";
                } else if (tong == 0) {
                     alert("Y·∫øu");  
                     document.getElementById("kq").innerHTML ="Y·∫øu";
                     document.getElementById("kq").style.color = "red";
                }
            } else {
                 alert("vui l√≤ng th·ª≠ l·∫°i");
                document.getElementById("sum").style.display = "none";  //·∫©n ƒëi input t·ªïng
              
            }
        }
